<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.ihsinformatics.aic.LoginActivity" >
    
    <ScrollView
        android:id="@+main_id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+login_id/logoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
				android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+login_id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center"
                android:text="@string/app_name"
                android:textSize="@dimen/large"
                android:textStyle="bold" />

            <TextView
                android:id="@+login_id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:text="@string/username"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+login_id/usernameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:hint="@string/username_hint"
                android:tag="@string/username" />
	
	    <TextView
	        android:id="@+login_id/passwordTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+login_id/usernameEditText"
	        android:layout_centerVertical="true"
	        android:text="@string/password"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/Black" />
	
	    <EditText
	        android:id="@+login_id/passwordEditText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+login_id/passwordTextView"
	        android:layout_centerHorizontal="true"
	        android:ems="12"
	        android:hint="@string/password_hint"
	        android:inputType="textPassword"
	        android:tag="@string/password" />

	    <TextView
	        android:id="@+login_id/showPasswordTextView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        android:gravity="right"
	        android:text="@string/show_pass"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="@color/mainTheme" />
	
	    <CheckBox
	        android:id="@+login_id/offlineCheckBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+login_id/passwordEditText"
	        android:layout_below="@+login_id/showPasswordTextView"
	        android:paddingLeft="@dimen/medium"
	        android:text="@string/work_offline"
	        android:textColor="@color/Black" />
	
	    <Button
	        android:id="@+login_id/loginButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+login_id/offlineCheckBox"
	        android:layout_alignRight="@+login_id/showPasswordTextView"
	        android:layout_below="@+login_id/offlineCheckBox"
	        android:paddingLeft="@dimen/medium"
	        android:paddingRight="@dimen/medium"
	        android:text="@string/login" />
	
	    <TextView
	        android:id="@+login_id/TextView01"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+login_id/loginButton"
	        android:layout_marginTop="27dp"
	        android:gravity="center"
	        android:text="@string/version_no"
	        android:textColor="@color/mainTheme" />
	</LinearLayout>
    </ScrollView>
</RelativeLayout>
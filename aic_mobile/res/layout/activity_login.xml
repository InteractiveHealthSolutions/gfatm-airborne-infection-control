<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/honey_dew"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.ihsinformatics.aic.LoginActivity" >
    
    <ScrollView
        android:id="@+main_id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+login_id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center"
                android:text="@string/app_name"
                android:textSize="@dimen/xlarge"
                android:textStyle="bold"
                android:textColor="@color/BlueShade" />
            
            <TextView
                android:id="@+login_id/TextView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+login_id/loginButton"
                android:gravity="right"
                android:text="@string/version_no"
                android:textColor="@color/mainTheme"
                android:textSize="@dimen/medium" />

            <TextView
                android:id="@+login_id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large"
                android:text="@string/username"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+login_id/usernameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:maxLength="35"
                android:textColor="@color/mainTheme"
                android:hint="@string/username_hint"
                android:tag="@string/username" />
	
	    <TextView
	        android:id="@+login_id/passwordTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+login_id/usernameEditText"
	        android:layout_centerVertical="true"
	        android:text="@string/password"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/Black" />
	
	    <EditText
	        android:id="@+login_id/passwordEditText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+login_id/passwordTextView"
	        android:layout_centerHorizontal="true"
	        android:ems="12"
	        android:maxLength="35"
	        android:textColor="@color/mainTheme"
	        android:hint="@string/password_hint"
	        android:inputType="textPassword"
	        android:tag="@string/password" />

	    <TextView
	        android:id="@+login_id/showPasswordTextView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        android:gravity="right"
	        android:text="@string/show_pass"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="@color/BlueShade"
	        android:textSize="@dimen/medium"
	        android:textStyle="italic" />
	
	    <CheckBox
	        android:id="@+login_id/offlineCheckBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+login_id/passwordEditText"
	        android:layout_below="@+login_id/showPasswordTextView"
	        android:paddingLeft="25dp"
	        android:text="@string/work_offline"
	        android:layout_gravity="left"
	        android:textColor="@color/Black" />
	
	    <Button
	        android:id="@+login_id/loginButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+login_id/offlineCheckBox"
	        android:layout_alignRight="@+login_id/showPasswordTextView"
	        android:layout_below="@+login_id/offlineCheckBox"
	        android:paddingLeft="@dimen/medium"
	        android:paddingRight="@dimen/medium"
	        android:textSize="@dimen/large"
	        android:text="@string/login" />
	    
	    <TextView
	        android:id="@+login_id/orTextView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="@dimen/small"
	        android:clickable="true"
	        android:gravity="center"
	        android:text="or"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@color/mainTheme"
	        android:textSize="@dimen/medium" />

	    <TextView
	        android:id="@+login_id/guestLoginTextView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="@dimen/small"
	        android:clickable="true"
	        android:gravity="center"
	        android:text="@string/guest_login"
	        android:textColor="@color/BlueShade"
	        android:textSize="@dimen/large"
	        android:textStyle="italic" />
	    
	</LinearLayout>
	
    </ScrollView>
   
</RelativeLayout>